<UserControl x:Class="PointOfSale.CustomizeSide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock Name="CustomizeTextBlock" Text="Cutomize "/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="Small" Tag="Small" Checked="Size_Checked"/>
                <RadioButton Content="Medium" Tag="Medium" Checked="Size_Checked"/>
                <RadioButton Content="Large" Tag="Large" Checked="Size_Checked"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
